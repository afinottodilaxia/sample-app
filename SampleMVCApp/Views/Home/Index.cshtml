@model SampleMVCApp.Models.IndexViewModel
@{
    ViewBag.Title = "Dashboard";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>

    <div class="row">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">CPU Traffic</div>
                <div class="card-body">
                    <h5 class="card-title">90%</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger mb-3">
                <div class="card-header">Likes</div>
                <div class="card-body">
                    <h5 class="card-title">41,410</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Sales</div>
                <div class="card-body">
                    <h5 class="card-title">760</h5>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">New Members</div>
                <div class="card-body">
                    <h5 class="card-title">2,000</h5>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-header">Monthly Recap Report</div>
                <div class="card-body">
                    <canvas id="monthlyRecapChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.8/dist/chart.umd.min.js"></script>
    <script>var ctx = document.getElementById('monthlyRecapChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June'],
                datasets: [{
                    label: 'Sales',
                    backgroundColor: 'rgba(0, 123, 255, 0.5)',
                    borderColor: 'rgba(0, 123, 255, 1)',
                    data: [10, 20, 30, 40, 50, 60]
                }]
            },
            options: {}
        });</script>
}
